<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme.NoActionBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/box_line">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/box_in_out3_border"
                            android:text="작업"
                            android:textColor="#7b65fb"
                            android:padding="2dp"/>
                        <Spinner
                            android:id="@+id/infra_job_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="190dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:background="@drawable/box_line"
                            android:padding="3dp">
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/box_in_out3_border"
                                android:text="조합"
                                android:textColor="#7b65fb"
                                android:padding="2dp"/>
                            <TextView
                                android:id="@+id/tv_office_group"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:textColor="#222222"
                                android:paddingLeft="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="195dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:background="@drawable/box_line"
                            android:padding="3dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="6dp">
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/box_in_out3_border"
                                android:text="버전"
                                android:textColor="#7b65fb"
                                android:padding="2dp"/>
                            <TextView
                                android:id="@+id/tv_version"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textSize="16sp"
                                android:textColor="#222222"
                                android:paddingLeft="12dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/search_bus_num_layout"
                            android:layout_width="190dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:background="@drawable/box_line"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/box_in_out3_border"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="차량"
                                android:textColor="#7b65fb" />
                            <EditText
                                android:id="@+id/et_bus_num"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:hint="예) 8010"
                                android:inputType="number"
                                android:textSize="16sp"
                                android:paddingRight="10dp"
                                android:maxLength="4"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="3dp">
                            <Button
                                android:id="@+id/btn_search_bus_num"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="차량검색"
                                android:textColor="#ffffff"
                                android:background="@drawable/box_in_out_sky_blue"/>

                            <Button
                                android:id="@+id/btn_register_new_bus"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="차량등록"
                                android:textColor="#ffffff"
                                android:background="@drawable/box_in_out_red"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/project_bus_list_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:background="@drawable/box_line"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/box_in_out3_border"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="차량"
                                android:textColor="#7b65fb" />
                            <Spinner
                                android:id="@+id/project_bus_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingLeft="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:background="@drawable/box_in_out4_rectangle"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/box_in_out3_border"
                            android:gravity="center"
                            android:padding="2dp"
                            android:text="운수사"
                            android:textColor="#7b65fb"/>

                        <Spinner
                            android:id="@+id/project_transp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:background="@drawable/box_line"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/box_in_out3_border"
                            android:text="영업소"
                            android:textColor="#7b65fb"
                            android:padding="2dp"/>
                        <Spinner
                            android:id="@+id/project_garage_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="190dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:background="@drawable/box_line"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="5dp">
                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/box_in_out3_border"
                                android:text="노선"
                                android:textColor="#7b65fb"
                                android:padding="2dp"/>
                            <Spinner
                                android:id="@+id/project_route_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="195dp"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:background="@drawable/box_line"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/box_in_out3_border"
                                android:gravity="center"
                                android:padding="2dp"
                                android:text="구분"
                                android:textColor="#7b65fb" />
                            <Spinner
                                android:id="@+id/prj_base_infra_job"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="5dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_job_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

        </ScrollView>



        <Button
            android:id="@+id/btn_insert"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="2 단계로 이동   →"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="#2196F3"/>
    </LinearLayout>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/activity_main_drawer"/>



</androidx.drawerlayout.widget.DrawerLayout>
